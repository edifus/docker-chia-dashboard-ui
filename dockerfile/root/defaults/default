server {
    listen 80;
    listen [::]:80;
    server_name _;

    root /app/chia-dashboard-ui/dist;

    # display real ip in nginx logs when connected through reverse proxy via docker network
    set_real_ip_from 172.0.0.0/8;
    real_ip_header X-Forwarded-For;

    index index.html;

    location = /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }

    location / {
        try_files $uri /index.html;
    }

    location = /index.html {
        expires 30s;
    }
}